{% extends 'base.html.twig' %}

{% block title %}Connection au site !
{% endblock %}

{% block body %}

	{% if has_error  %}
		<div class="alert alert-danger">Un erreur est survenu , l'utilisateur ou le mot de pass sont invalides</div>
	{% endif %}

	<div class="container mt-5 pt-3">
		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-light py-5 px-5">
					<h3 class="text-center text-uppercase mb-3">Se connecter en tant qu'administrateur</h3>
					<form action="{{path('account_login') }}" method="post">
						<div class="form-group">
							<label for='email'>Votre Email:</label>
							<input type="text" name="_username" id="email" class="form-control" placholder="Votre adresse mail.." required>
						</div>
						<div class="form-group">
							<label for='email'>Votre mot de pass:</label>
							<input type="text" name="_password" id="password" class="form-control" placholder="Votre password.." required>
						</div>
						<div class="row">
							<div class="col">
								<div class="form-group">
									<button type="submit" class="btn btn-success">Connexion</button>
								</div>
							</div>
							<div class="col">
								<div class="form-group">
									<a href="{{path("account_register")}}">
										<button type="button" class="btn btn-warning float-right">Inscription</button>
									</a>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
