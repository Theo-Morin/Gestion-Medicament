{% extends 'base.html.twig' %}

{% block title %}Liste des composants{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="display-5 text-center mb-5">Liste des composants</h2>
    {% if is_granted('ROLE_USER') %}<a href="{{path('compo_add')}}"><div class="button btn btn-success float-right" type="button">Nouveau composant</div></a><br/><br/><br/>{% endif %}
    <table id="table" class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col" class="text-center">Nom</th>
                {% if is_granted('ROLE_USER') %}<th scope="col" class="text-right">Action</th>{% endif %}
            </tr>
        </thead>
        <tbody>
            {% for composant in composants %}
                <tr>
                    <th scope="row">{{ composant.id }}</th>
                    <td class="text-center">{{ composant.NomComposant }}</td>
                    {% if is_granted('ROLE_USER') %}<td class="text-right"><a href="{{path('compo_edit', {'id': composant.id})}}"><button type="button" class="btn btn-warning"><i class="fas fa-pencil-alt"></i></button></a><a href="#"><button type="button" class="btn btn-danger"><i class="fas fa-trash"></i></button></a></td>{% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block stylesheets %}
<style>td button { margin-left:5px; margin-right:5px; }</style>
{% endblock %}
