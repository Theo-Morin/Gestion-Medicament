{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
<style>
#intro
{
    background-image:url('/assets/img/medoc1.png');
    width:100%;
    height:750px;
    background-position:center center;
}

#intro #texte
{
    position:absolute;
    left:50%;
    top:375px;
    font-size:2.5rem;
    color:white;
    text-shadow:0px 0px 8px #000000;
    transform:translate(-50%,-20px);
}

#team img
{
    width:150px;
    height:150px;
}
.titre
{
    color:black;
}
.titre::after
{
    content:'';
    display:block;
    width:15%;
    margin:auto;
    margin-top:10px;
    height:3px;
    border-radius:1000px;
    background-color:var(--first);
}

#pointdinterrogation
{
    color:white;
}

</style>
{% endblock %}

{% block body %}
<div id="intro">
    <div id="texte">
        Bienvenue sur votre outil de gestion de médicaments
    </div>
</div>
<div id="avantages" class="mt-5">
    <h2 class="text-center display-5 titre">Pourquoi utiliser des médicaments ?</h2>
    <div class="container mt-3">
        <div class="row">
            <div class="col text-center">
                <img src="/assets/img/shield.png" alt="shield" class="display-block">
                <p class="mt-2">Permet de renforcer votre système imunitaire contre les méchants virus</p>
            </div>
            <div class="col text-center">
                <img src="/assets/img/medecin.png" alt="shield" class="display-block">
                <p class="mt-2">Permet de faire vivre les médecins et d'enrichir les sociétés pharmacetiques</p>
            </div>
            <div class="col text-center">
                <img src="/assets/img/shield.png" alt="shield" class="display-block">
                <p class="mt-2">Permet de renforcer votre système imunitaire des méchants virus</p>
            </div>
        </div>
    </div>
</div>
<div id="pointdinterrogation" class="mt-5" style="background-color:var(--first)">
    <img src="/assets/img/separator/top.png" class="separator">
    <h2 class="pt-5 pb-5 text-center">Ce module ne sert à rien pour l'instant</h2>
    <img src="/assets/img/separator/bottom.png" class="separator">
</div>
<div id="team" class="mt-5">
    <h2 class="text-center display-5 titre">Notre équipe</h2>
    <div class="container mt-4">
        <div class="row">
            <div class="col text-center">
                <img class="rounded-circle" src="http://placehold.it/500x500" alt="Fabio Pereira">
                <h4 class="mt-3 display-5">Fabio Pereira</h4>
            </div>
            <div class="col text-center">
                <img class="rounded-circle" src="http://placehold.it/500x500" alt="Théo Morin">
                <h4 class="mt-3 display-5">Théo Morin</h4>
            </div>
            <div class="col text-center">
                <img class="rounded-circle" src="http://placehold.it/500x500" alt="Tanguy Palmie">
                <h4 class="mt-3 display-5">Tanguy Palmie</h4>
            </div>
        </div>
    </div>
</div>
{% endblock %}
